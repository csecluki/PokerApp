<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameRoomActivity"
    android:focusableInTouchMode="true">
<!--    xmlns:app="http://schemas.android.com/apk/res-auto"-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/theme"
        android:scaleType="fitXY"
        android:contentDescription="@string/themeDesc" />

    <include android:id="@+id/table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        layout="@layout/layout_poker_table"/>

    <RelativeLayout
        android:id="@+id/layoutPool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/table"
        android:layout_alignTop="@+id/layoutButtons"
        android:layout_toStartOf="@+id/layoutButtons">

        <TextView
            android:id="@+id/textViewPoolLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pool:"
            style="@style/defaultStyle"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/textViewPool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            style="@style/defaultStyle"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textViewPoolLabel"
            android:layout_marginStart="8dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutCards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/layoutButtons"
        android:layout_alignStart="@+id/table"
        android:layout_below="@+id/layoutPool">

        <ImageView
            android:id="@+id/card1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/player_s_first_card"
            android:src="@drawable/c2" />

        <ImageView
            android:id="@+id/card2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/card1"
            android:contentDescription="@string/player_s_second_card"
            android:src="@drawable/c3" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutButtons"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/layoutCards"
        android:layout_below="@+id/table"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <EditText
            android:id="@+id/editTextAmount"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:autofillHints="no"
            android:inputType="number"
            tools:ignore="LabelFor"/>

        <Button
            android:id="@+id/btnRaise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/btn_raise"
            android:text="@string/raise"
            android:textColor="@color/btn_text"
            android:layout_alignParentEnd="true"
            tools:ignore="RelativeOverlap" />

        <Button
            android:id="@+id/btnCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/btn_check"
            android:text="@string/check"
            android:textColor="@color/btn_text"
            android:layout_below="@+id/editTextAmount"
            android:layout_alignStart="@+id/editTextAmount"/>

        <Button
            android:id="@+id/btnCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/btn_call"
            android:text="@string/call"
            android:textColor="@color/btn_text"
            android:layout_below="@+id/btnRaise"
            android:layout_alignParentEnd="true"
            tools:ignore="RelativeOverlap" />

        <Button
            android:id="@+id/btnFold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/btn_fold"
            android:text="@string/fold"
            android:textColor="@color/btn_text"
            android:layout_below="@+id/btnCheck"
            android:layout_alignStart="@+id/btnCheck"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/btnAllIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/btn_all_in"
            android:text="@string/all_in"
            android:textColor="@color/btn_text"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@+id/btnFold"/>

    </RelativeLayout>

